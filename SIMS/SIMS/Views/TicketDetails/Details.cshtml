<div class="content-wrapper" style="min-height: 1228.23px;">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <!-- Details page-->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Ticket Details Page</h3>
                        </div>
                        <form role="form">
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Ticket Title</label>
                                    <input type="text" readonly class="form-control-plaintext" id="title" value="Sample Ticket">
                                </div>
                                <div class="form-group">
                                    <label>Project</label>
                                    <input type="text" readonly class="form-control-plaintext" id="project" value="SIMS">
                                </div>
                                <div class="form-group">
                                    <label>Type</label>
                                    <input type="text" readonly class="form-control-plaintext" id="Type" value="Task">
                                </div>
                                <div class="form-group">
                                    <label>Remarks</label>
                                    <textarea readonly class="form-control-plaintext" rows="3" placeholder="Bug in Report"></textarea>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="reset" class="btn btn-primary ">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!--Right Coulmn-->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Ticket Details Page</h3>

                        </div>
                        <form role="form">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="title" id="TT">Ticket Title</label>
                                    <input type="text" readonly class="form-control-plaintext" id="TT" value="Sample Ticket">
                                </div>
                                <div class="form-group">
                                    <label>Remarks</label>
                                    <textarea readonly class="form-control-plaintext" rows="3" placeholder="Bug in Report"></textarea>
                                </div>
                                <div class="form-group">
                                    <label id="AT">AssignTo</label>
                                    <select class="select2" multiple data-placeholder="h" style="width: 100%;">
                                        <option data-select2-id="1">HarshPatel</option>
                                        <option data-select2-id="2">AksharPatel</option>
                                        <option data-select2-id="3">MihirPAtel</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Comment</label>
                                    <input type="text" readonly class="form-control-plaintext" id="CMT" value="Quick Resolve">
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="reset" class="btn btn-primary" uiactions="valuechange">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">History</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.card-tools -->
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body" style="height:auto">
                            <div class="callout callout-info">
                                <h6>Status Changed by Harsh on 10-04-2020 17:00pm</h6>
